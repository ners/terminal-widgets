cabal-version:       3.0
name:                terminal-widgets
version:             0.1.0.0
synopsis:            Widgets in the terminal
homepage:            https://github.com/ners/terminal-widgets/blob/master/README.md
license:             Apache-2.0
license-file:        LICENCE.md
author:              ners
maintainer:          ners@gmx.ch
bug-reports:         https://github.com/ners/terminal-widgets/issues
category:            Terminal
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md
tested-with:         GHC == { 9.4, 9.6, 9.8 }

source-repository head
  type:     git
  location: https://github.com/ners/terminal-widgets

common common
    default-language: GHC2021
    ghc-options:
        -Weverything
        -Wno-unsafe
        -Wno-missing-safe-haskell-mode
        -Wno-missing-export-lists
        -Wno-missing-import-lists
        -Wno-missing-kind-signatures
        -Wno-all-missed-specialisations
    default-extensions:
        ApplicativeDo
        BlockArguments
        DataKinds
        DefaultSignatures
        DeriveAnyClass
        DeriveGeneric
        DerivingStrategies
        DerivingVia
        ExplicitNamespaces
        LambdaCase
        NoFieldSelectors
        NoImplicitPrelude
        OverloadedLabels
        OverloadedRecordDot
        OverloadedStrings
        RecordWildCards
        RecursiveDo
        TypeFamilies
        ViewPatterns

library
    import:           common
    hs-source-dirs:   src
    exposed-modules:
        System.Terminal.Render,
        System.Terminal.Widgets.Buttons,
        System.Terminal.Widgets.Common,
        System.Terminal.Widgets.Select,
        System.Terminal.Widgets.TextInput,
    build-depends:
        base >= 4.16 && < 5,
        exceptions,
        generic-lens,
        mtl,
        prettyprinter,
        terminal,
        text,
        text-rope-zipper,
        transformers,
    other-modules:
        Internal.Prelude,
